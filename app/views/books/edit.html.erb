<div class="container">
  <div class="row">
    <div class="col-lg-5 px-5 mx-auto">


<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

  <label for="inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"Title" %><br><br>
  
  <label for="inputBody">Opinion</label><br>
  <%= f.text_area :body, autofocus: true %><br><br>
  
  <div class="btn-wrapper col-5">
  <%= link_to"Update Book", book_path, class: "btn btn-success btn-sm btn-block" %>
  </div>
  <% end %>
  
  
  <%= link_to "Show", book_path(@book.id) %>
  |
  <%= link_to "Back", "/books" %>
 
    </div>
  </div>
</div>
