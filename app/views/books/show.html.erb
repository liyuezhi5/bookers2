<h1>book„ÅÆshow page</h1>

<%= render 'list', books: @books %>

<div class="col-lg-8" style="background-color: pink;">
  
<table class="table table-striped">
  <thead>
    <tr>
      <th>(user_photo)</th>
      <th>(Title)</th>
      <th>(Opinion)</th>
    </tr>
  </thead>

  <tbody>
    <h2>Book detail</h2>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td>edit</td>
        <td><% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
