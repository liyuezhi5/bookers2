<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

          <% if @user.profile_image.attached? %>
            <%= image_tag @user.profile_image, size: "100x100" %>
          <% else %>
            <%= image_tag 'no_image', size: "100x100" %>
          <% end %>

          <table class="table table-striped">
            <tbody>
              <tr>
                <th>name</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th>introduction</th>
                <td></td>
              </tr>
            </tbody>
          </table>

        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear" style="color: #5a5f67;"></i>
        <% end %>

      <h2>New book</h2>
        <%= form_with model: @book do |f| %>
          <h4>Title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <br>
          <div class="col-6">
          <%= f.submit 'Create Book', class: "btn btn-success btn-sm btn-block" %>
          </div>
        <% end %>
    </div>
