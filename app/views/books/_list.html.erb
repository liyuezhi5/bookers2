<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        
          <%= image_tag 'no_image', size: "100x100" %>
        
          <table class="table table-striped">
            <tbody>
              <tr>
                <th>name</th>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <th>introduction</th>
                <td></td>
              </tr>
            </tbody>
          </table>
          
        <%= link_to 'edit', edit_user_path(@user.id) %>
