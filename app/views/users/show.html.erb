<div class="container">
   <div class="row">
<%= render 'books/list', book: @book, user: @user %>
    

<div class="col-md-8 offset-md-1">
<table class="table table-striped">


  <tbody>
    <h2>Books</h2>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(@user) do %>
                <%= image_tag book.user.get_profile_image(100,100) %><br>
              <% end %>

          </td>
          <td><%=link_to book_path(book) do %>
               <%= book.title %>
              <% end %>
          </td>
          <td><%= book.body %></td>

          <% if book.user == current_user %>
            <div class="btn-wrapper col-1 mx-auto">
              <td><%= link_to "Edit", edit_book_path(book), class: "btn btn-success btn-sm btn-block" %></td>
              <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm btn-block" %></td>
            </div>
          <% end %>
        </tr>
      <% end %>
  </tbody>
</table>
</div>
</div>
</div>

