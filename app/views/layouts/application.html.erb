<!DOCTYPE html>

<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

   <script src="https://kit.fontawesome.com/012172cb3f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" date-toggle="collapse" date-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <% if user_signed_in? %>
            <li class="nav-item">
              <i class="fa-solid fa-house" style="color: #ffffff;"></i>
              <%= link_to "Home", new_book_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-users" style="color: #ffffff;"></i>
              <%= link_to "Users", users_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-book-open" style="color: #ffffff;"></i>
              <%= link_to "Books", books_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-right-from-bracket" style="color: #ffffff;"></i>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>

            <% else %>
            <li class-"nav-item">
              <i class="fa-solid fa-house" style="color: #ffffff;"></i>
              <%= link_to "Home", root_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-link" style="color: #ffffff;"></i>
              <%= link_to "About", about_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i>
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
              <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
            </li>
            <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="text-dark pt-5 pb-4">
      <div class="container">
        <div class="row no-qutters">
          <div class="col-md-4">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
